#!/bin/sh

SCRIPT_BIN=`dirname $0`
. $SCRIPT_BIN/common.sh

daemon=0
valgrind=""

# explicit -n/--norestart?
while [ $# -ge 1 ]; do
    case $1 in
	-n | --norestart )
	    daemon=1
	    shift
	    ;;
	--valgrind )
	    valgrind="valgrind"
	    daemon=1
	    shift
	    ;;
	--conf_file )
	    startup_conf_file=$2
	    shift
	    ;;
	* )
	    break
    esac
done

[ "$startup_conf_file" == "" ] && startup_conf_file="startup.conf"
CCONF="$CCONF_BIN --conf_file $startup_conf_file"

orig_args=$*

# implicit from any -d?
while [ $# -ge 1 ]; do
       case $1 in
               -d | --daemon )
               daemon=1
       esac
       shift
done

get_conf_bool do_ulimit 0 "ulimit core" crun global
[ "$do_ulimit" != "0" ] && ulimit -c unlimited

while [ true ]; do
	$valgrind $orig_args
	[ $daemon -eq 1 ] && exit
done
